{
  "name": "package-script-manager",
  "description": "package.json scripts with Javascript -- because dynamic configs are better.",
  "version": "1.0.1",
  "bin": {
    "psm": "./index.js"
  },
  "license": "MIT",
  "scripts": {
    "start": "babel -w index.babel.js -o index.js"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "dependencies": {
    "chokidar-cli": "^1.2.0",
    "meow": "^3.7.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0"
  }
}
